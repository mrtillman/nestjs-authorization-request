{
  "name": "nestjs-authorization-request",
  "private": true,
  "author": "mrtillman",
  "version": "1.0.0",
  "description": "demonstrates how to send an oauth 2.0 authorization request",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf Release",
    "postinstall": "npm run build",
    "build": "nest build && gulp",
    "format": "prettier --write \"Presentation/**/*.ts\" \"Tests/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node Release/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./Tests/jest-e2e.json",
    "test:spec": "cucumber-js Specification/**/*.feature"
  },
  "dependencies": {
    "@nestjs/common": "^6.7.2",
    "@nestjs/core": "^6.7.2",
    "@nestjs/platform-express": "^6.7.2",
    "@types/dotenv": "^6.1.1",
    "cucumber": "^6.0.5",
    "dotenv": "^8.1.0",
    "expect": "^24.9.0",
    "isomorphic-unfetch": "^3.0.0",
    "pug": "^2.0.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "sinon": "^9.0.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.14.2",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.5",
    "gulp": "^4.0.2",
    "jest": "^24.9.0",
    "moq.ts": "^5.0.5",
    "nock": "^12.0.2",
    "prettier": "^1.18.2",
    "serialize-javascript": ">=2.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3",
    "acorn": ">=6.4.1",
    "minimist": ">=1.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "Application",
      "Common",
      "Infrastructure",
      "Presentation",
      "Services"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
